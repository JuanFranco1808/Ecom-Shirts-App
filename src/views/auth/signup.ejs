<%- include('../layouts/header', {title: 'Sign Up'}); -%>

<div class="container">
  <div class="row">
    <div class="col-12">
      <h1 class="alert alert-success text-center">Registrarse</h1>
    </div>
  </div>
  <div class="row">
    <div class="col-12">
      <form action="/auth/signup" method="post" class="row">
        <div class="col-6">
          <label for="username" class="form-label">Nombre de usuario</label>
          <input
            type="text"
            name="username"
            id="username"
            class="form-control"
            required
          />
        </div>
        <div class="col-6">
          <label for="email" class="form-label">Correo electronico</label>
          <input
            type="text"
            name="email"
            id="email"
            class="form-control"
            required
          />
        </div>
        <div class="col-6">
          <label for="password" class="form-label">Contraseña</label>
          <input
            type="password"
            name="password"
            id="password"
            class="form-control"
            required
          />
        </div>
        <div class="col-12 d-grid mt-4">
          <button type="submit" class="btn btn-outline-success">Crear</button>
        </div>
      </form>
      <div class="col-6 mt-4">
        <label for="register" class="form-label">¿Ya tienes una cuenta?</label>
      </div>
      <div class="col-12 d-grid">
        <a href="/auth/signin" class="btn btn-outline-dark">Ingresar</a>
      </div>
    </div>
  </div>
</div>

<%- include('../layouts/footer'); -%>
