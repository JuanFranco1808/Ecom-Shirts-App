<%- include('../../layouts/header', {title: "Editar camiseta"}); -%>

<h1 class="alert alert-success">Editar camiseta</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- Formulario -->
    <form
      method="POST"
      action="/admin/shirts/update"
      enctype="multipart/form-data"
    >
      <input type="number" id="id" name="id" value="<%=shirts.id%>" hidden />
      <div class="mb-3">
        <label for="name" class="form-label">Nombre de la camiseta</label>
        <input
          name="name"
          type="text"
          class="form-control"
          id="name"
          value="<%=shirts.name%>"
        />
      </div>
      <div class="mb-3">
        <label for="size" class="form-label">Tama√±o de la camiseta</label>
        <input
          name="size"
          type="text"
          class="form-control"
          id="size"
          value="<%=shirts.size%>"
        />
      </div>
      <div class="mb-3">
        <label for="gender" class="form-label">Sabor de la camiseta</label>
        <input
          name="gender"
          type="text"
          class="form-control"
          id="gender"
          value="<%=shirts.gender%>"
        />
      </div>
      <div class="mb-3">
        <label for="description" class="form-label"
          >Descripcion de la camiseta</label
        >
        <input
          name="description"
          type="text"
          class="form-control"
          id="description"
          value="<%=shirts.description%>"
        />
      </div>
      <div class="mb-3">
        <label for="price" class="form-label">Precio de la camiseta</label>
        <input
          name="price"
          type="number"
          class="form-control"
          id="price"
          value="<%=shirts.price%>"
        />
      </div>
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>
    <div class="row">
      <div class="col-12 mt-2">
        <a href="/admin/shirts/shirts" class="btn btn-primary">Regresar</a>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>

<%- include('../../layouts/footer'); -%>
