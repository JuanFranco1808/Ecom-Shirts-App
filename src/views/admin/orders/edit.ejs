<%- include('../../layouts/header', {title: "Editar orden"}); -%>

<h1 class="alert alert-success">Editar orden</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- Formulario -->
    <form method="POST" action="/admin/orders/update">
      <input type="number" id="id" name="id" value="<%=orders.id%>" hidden />
      <div class="mb-3">
        <label for="name" class="form-label">Nombre</label>
        <input
          name="name"
          type="text"
          class="form-control"
          id="name"
          value="<%=orders.name%>"
        />
      </div>
      <div class="mb-3">
        <label for="lastName" class="form-label">Apellidos</label>
        <input
          name="lastName"
          type="text"
          class="form-control"
          id="lastName"
          value="<%=orders.lastName%>"
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Correo electronico</label>
        <input
          name="email"
          type="text"
          class="form-control"
          id="email"
          value="<%=orders.email%>"
        />
      </div>
      <div class="mb-3">
        <label for="address" class="form-label">Direccion</label>
        <input
          name="address"
          type="text"
          class="form-control"
          id="address"
          value="<%=orders.address%>"
        />
      </div>
      <div class="mb-3">
        <label for="date" class="form-label">Fecha</label>
        <input
          name="date"
          type="date"
          class="form-control"
          id="date"
          value="<%=orders.date%>"
        />
      </div>
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>
    <div class="row">
      <div class="col-12 mt-2">
        <a href="/admin/orders/orders" class="btn btn-primary">Regresar</a>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>

<%- include('../../layouts/footer'); -%>
