<%- include('../../layouts/header', {title: "Listado usuarios"}); -%>

<h1 class="alert alert-success">Listado usuarios</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-bordered border-primary">
      <tr class="table-success">
        <th>Id del usuario</th>
        <th>Nombre de usuario</th>
        <th>Email del usuario</th>
        <th>Contraseña del usuario</th>
        <th>Editar</th>
        <th>Eliminar</th>
      </tr>
      <% users.map( (users) =>{%>
      <tr class="table-warning">
        <td><%= users.id %></td>
        <td><%= users.username %></td>
        <td><%= users.email %></td>
        <td><%= users.password %></td>
        <td>
          <a href="/admin/users/edit/<%= users.id %>" class="btn btn-success"
            >Editar</a
          >
        </td>
        <td>
          <form action="/admin/users/destroy/<%= users.id %>" method="POST">
            <input
              type="submit"
              class="btn btn-danger"
              onclick="return confirm('Está Seguro?')"
              value="Delete"
            />
          </form>
        </td>
      </tr>
      <% }) %>
    </table>
    <a href="/admin/users/create" class="btn btn-primary">Añadir usuario</a>
    <a href="/admin" class="btn btn-primary">Regresar</a>
  </div>
  <div class="col-md-2"></div>
</div>

<%- include('../../layouts/footer'); -%>
