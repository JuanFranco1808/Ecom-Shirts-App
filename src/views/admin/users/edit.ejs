<%- include('../../layouts/header', {title: "Editar usuario"}); -%>

<h1 class="alert alert-success">Editar usuario</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <!-- Formulario -->
    <form method="POST" action="/admin/users/update">
      <input type="number" id="id" name="id" value="<%=user.id%>" hidden />
      <div class="mb-3">
        <label for="username" class="form-label">Nombre</label>
        <input
          name="username"
          type="text"
          class="form-control"
          id="username"
          value="<%=user.username%>"
        />
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Correo electronico</label>
        <input
          name="email"
          type="text"
          class="form-control"
          id="email"
          value="<%=user.email%>"
        />
      </div>
      <div class="mb-3">
        <label for="password" class="form-label">Contrase√±a</label>
        <input
          name="password"
          type="text"
          class="form-control"
          id="password"
          value="<%=user.password%>"
        />
      </div>
      <button type="submit" class="btn btn-primary">Actualizar</button>
    </form>
    <div class="row">
      <div class="col-12 mt-2">
        <a href="/admin/users/users" class="btn btn-primary">Regresar</a>
      </div>
    </div>
  </div>
  <div class="col-md-2"></div>
</div>

<%- include('../../layouts/footer'); -%>
